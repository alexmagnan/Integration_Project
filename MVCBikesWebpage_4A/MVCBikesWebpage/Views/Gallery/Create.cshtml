@{
    ViewBag.Title = "Add Image";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Image</h2>

@using (Html.BeginForm("Create", "Gallery", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Page", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select id="page" name="page">
                    <option selected="selected" value="Home">Home</option>
                    <option value="Gears">Gears</option>
                    <option value="Bikes">Bikes</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Image", new { @class = "control-label col-md-2" })
            @Html.ValidationMessage("Image", new { @class = "text-danger" })
            <div class="col-md-10">
                <input type="file" id="Image" name="file" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
